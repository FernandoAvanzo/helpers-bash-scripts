[Unit]
Description=ROT13 demo service
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
User=fernandoavanzo
ExecStart=rclone mount remote: /mnt/data/gdrive/avanzo-drive --vfs-cache-mode full

[Mount]
Type=rclone
What=sftp1:1subdir
Where=/mnt/data/gdrive/avanzo-drive
Options=rw,_netdev,allow_other,args2env,vfs-cache-mode=writes,config=/etc/rclone.conf,cache-dir=/var/rclone

[Install]
WantedBy=multi-user.target
